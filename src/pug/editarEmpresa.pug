extends partials/adminLayout.pug
//- block header
//-     +headerTitle('Empleados')
//-     <button class="ui green button lolo" @click="agregar()"><i class="address book icon"></i>Agregar Empleado</button>
block main
    .main__results#app

        //- Modal de Agregar Usuario
        <div class="ui modal agregar mini">
            //- <i class="close icon"></i>
            <div class="header">Editar Empresa</div>
            <div class="content">
                //- form.ui.form(action="shield" method='POST')
                form.ui.form(action="shield" method='POST')
                    <div class="field">
                        <label>Nombre</label>
                        <input type="text" name="nombre" placeholder="Nombre de Empresa">
                    </div>
                    
                    <div class="field">
                        <label>Giro</label>
                        <input type="password" name="giro" placeholder="Modifica el Giro">
                    </div>
                    <div class="field">
                        label Proceso
                        select.ui.search.dropdown(name="proceso")
                            <option value="">Seleccione un Proceso</option>
                            <option value="Microempresa">Microempresa</option>
                            <option value="Mediana Empresa">Mediana Empresa</option>
                            <option value="Pequeña Empresa">Pequeña Empresa</option>
                            <option value="Grande Empresa">Grande Empresa</option>
                    </div>

                    <div class="ui yellow message errorValidacion">
                        <div class="header">Action Forbidden</div>
                        <p>You can only sign up for an account once with a given e-mail address.</p>
                    </div>
                    <div class="actions">
                        //- button(type="submit" class="ui green button m-0") Agregar
                        //- button(type="submit" class="ui primary submit button") Agregar
                        <div class="ui green submit button m-0">Guardar</div>
                        <a href="www.google.com" class="ui red button ml-1">Cancelar</a>
                        //- <div class="ui positive right labeled icon button">Yep, that's me<i class="checkmark icon"></i></div>
                    </div>
            </div>
        </div>